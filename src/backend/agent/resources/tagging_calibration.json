    "communication": ["email", "message", "chat", "discussion"],
    "admin": ["invoice", "expense", "tax", "paperwork"],
    "maintenance": ["clean", "fix", "repair", "setup", "install"],
    "social": ["friend", "friends", "family", "dinner out", "party"],
    "health": ["doctor", "dentist", "clinic", "meds"]
