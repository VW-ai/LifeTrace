{
  "metadata": {
    "version": "1.0",
    "description": "Three-layer hierarchical taxonomy for granular activity classification",
    "layers": {
      "1": "Nature - High-level activity type (work, study, personal, etc.)",
      "2": "Subject - Specific domain/topic within the nature (Web3, smartHistory, CFA, etc.)",
      "3": "Project - Optional specific project/context (bytediff, personal-website, etc.)"
    }
  },
  "taxonomy": {
    "work": {
      "description": "Work-related activities including meetings, development, and professional tasks",
      "keywords": ["meeting", "development", "work", "project", "team", "职场", "工作"],
      "subjects": {
        "bytediff": {
          "description": "ByteDance related work activities",
          "keywords": ["bytedance", "bytediff", "字节", "doris"],
          "projects": ["debug", "CI/CD", "deployment", "code-review"]
        },
        "smartHistory": {
          "description": "SmartHistory project development",
          "keywords": ["smartHistory", "smart-history", "tagging", "AI"],
          "projects": ["frontend", "backend", "tagging-system", "database"]
        },
